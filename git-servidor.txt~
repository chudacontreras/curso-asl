 ###PRIMERA PARTE: LADO DEL SERVIDOR
##COMO ROOT
apt-get install git git-core openssh-server
useradd -d /opt/git-tarde -s /bin/bash -r -m git-tarde
passwd git-tarde
##COMO USUARIO GIT-TARDE
cd
mkdir soporte-local
cd soporte-local
git --bare init

###SEGUNDA PARTE: LADO DEL CLIENTE
##COMO USUARIO REGULAR
cd
mkdir soporte-local-tarde
cd soporte-local-tarde
git init
git remote add local git-tarde@localhost:soporte-local
git remote show local

#COMO USUARIO REGULAR
cd
ssh-keygen -t rsa
cd soporte-7
cat ~/.ssh/id_rsa.pub > (cedula)/id_rsa.pub
git add (cedula)/id_rsa.pub
git commit -m "Llave p√∫blica de (nombre)"
git pull origin master
git push origin master
